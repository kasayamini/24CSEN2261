#include <stdio.h>

int main() {
    int number;

    printf("Enter a number: ");
    scanf("%d", &number);

    if (number % 2 == 0) {
        printf("%d is an even number.\n", number);
    } else {
        printf("%d is an odd number.\n", number);
    }

    return 0;
}


OUTPUT 1:
Enter a number: 4
4 is an even number.
OUTPUT 2:
Enter a number: 7
7 is an odd number.
